@page "/counter"
@using BlazorFirstApp.Pages.Components
@inject NavigationManager navManager

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<br/>
<br/>

<input type="checkbox" @bind="DisplayEmail"/><label>Show email</label>

<ContactComponent Email="test@test.co" DisplayEmail="@DisplayEmail" />

<br />
<br />

<button @onclick='()=> {navManager.NavigateTo("./");}'>Back</button>

@code {
    private int currentCount = 0;
    private bool DisplayEmail = true;

    private void IncrementCount()
    {
        currentCount++;
    }
}
